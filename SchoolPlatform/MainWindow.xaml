<Window x:Class="SchoolPlatform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolPlatform"
        xmlns:viewmodel="clr-namespace:SchoolPlatform.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Comic Sans Ms">
   
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBox x:Name="username_box" Width="180" Height="25" Text="{Binding Username}" Margin="0,5"/>
        <PasswordBox x:Name="password_box" Width="180" Height="25" PasswordChanged="PasswordBox_PasswordChanged"/>
        <Button Content="LOGIN" x:Name="login_button" Width="90" Height="25" Command="{Binding LoginCommand}" Margin="0,5"/>
    </StackPanel>
</Window>
